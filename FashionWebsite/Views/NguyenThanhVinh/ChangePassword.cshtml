@{
    Layout = "~/Views/Shared/LayoutUser 2.cshtml";
}

<!DOCTYPE html>
<html style="height:100%">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Đổi mật khẩu</title>
    <link rel="shortcut icon" type="image/png" href="~/Images/movie-strip.png">
    <style>
        body, html {
            margin: 0;
            padding: 0;
            overflow: hidden;
        }

        body {
            background-size: cover;
            background-position: center;
            height: 100%;
            width: 100%;
        }

        #wrapper {
            height: 500px;
            margin-right: 60%;
            margin-top: 50px;
            margin-left: 200px;
        }

        input {
            color: black;
        }

        #form-change-password {
            height: 420px;
            width: 500px;
            background: rgba(0, 0, 0, 0.8);
            border-radius: 15px;
            padding: 30px 30px 40px;
            box-shadow: 0px 0px 17px 2px rgba(21, 21, 21, 0.8);
            margin-top: 40%;
            margin-left: 75%;
        }

        table {
            display: flex;
            justify-content: center;
            align-items: center;
        }

        td {
            height: 40px;
            color: white;
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            font-weight: bold;
            padding: 10px;
        }

        h2 {
            color: crimson;
            font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            font-weight: bold;
            text-align: center;
            margin-top: 0px;
        }

        .form-input {
            background: transparent;
            border: 0;
            outline: 0;
            color: black;
            flex-grow: 1;
        }

            .form-input::placeholder {
                color: #ffffff59;
            }

        .btn-doimatkhau {
            background-color: #4CAF50;
            color: white;
            padding: 15px 32px;
            font-size: 16px;
            width: 100%;
            border-radius: 4px;
            border: none;
            cursor: pointer;
            height: 50px;
        }

            .btn-doimatkhau:hover {
                background-color: #3e8e41;
            }


        input[type="submit"]:hover {
            background-color: #3e8e41;
        }

        .che {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.6);
            z-index: 9999;
        }

        .input-container {
            position: relative;
            color: black;
        }

            .input-container input {
                background-color: black;
                border: none;
                outline: none;
            }

            .input-container span {
                position: absolute;
                top: 0;
                left: 0;
                padding: 5px;
                color: white;
                pointer-events: none;
            }

        .input-black {
            color: black;
        }

        .link-nav {
            color: #54a0ff;
            text-decoration: none;
            font-style: italic;
            margin: 0 20px;
        }

            .link-nav:hover {
                color: red;
            }

        .message {
            text-align: center;
            padding-top: 5px;
            font-size: 20px;
            font-weight: bold
        }

        .mess {
            text-align: center;
            padding-top: 15px;
            font-size: 16px;
        }
    </style>
</head>



<body>
    <div class="che">
        <div id="wrapper">
            @using (Html.BeginForm("ChangePassword", "NguyenThanhVinh", FormMethod.Post, new { id = "form-change-password" }))
            {
                <h2>Đổi mật khẩu</h2>
                @Html.ValidationSummary(true)
                <!-- Thông báo lỗi hoặc thành công -->
                <div class="message-container">
                    @if (ViewBag.Debug != null)
                    {
                        <p class="message" style="color: orange; text-align: center;">@ViewBag.Debug</p>
                    }

                    @if (ViewBag.Success != null)
                    {
                        <p class="message" style="color: green; text-align: center;">@ViewBag.Success</p>
                    }

                    @if (ViewBag.ThongBao != null)
                    {
                        <p class="message" style="color: red; text-align: center;">@ViewBag.ThongBao</p>
                    }
                </div>
                <table>
                    <tr>
                        <td>Tên đăng nhập:</td>
                        <td>
                            @Html.TextBox("TenDN", null, new { @class = "input-black" })

                        </td>
                        @ViewData["Err1"]
                    </tr>

                    <tr>
                        <td>Mật khẩu cũ:</td>
                        <td>
                            @Html.Password("OldPassword", null, new { @class = "input-black" })

                        </td>
                        @if (ViewBag.ErrOld != null)
                        {
                            @Html.Raw(ViewBag.ErrOld)
                        }
                    </tr>

                    <tr>
                        <td>Mật khẩu mới:</td>
                        <td>
                            @Html.Password("NewPassword", null, new { @class = "input-black" })

                        </td>
                        @if (ViewBag.ErrNew != null)
                        {
                            @Html.Raw(ViewBag.ErrNew)
                        }
                    </tr>




                    <tr>
                        <td>Xác nhận mật khẩu mới:</td>
                        <td>
                            @Html.Password("ConfirmPassword", null, new { @class = "input-black" })

                        </td>
                        @if (ViewBag.ErrConfirm != null)
                        {
                            @Html.Raw(ViewBag.ErrConfirm)
                        }
                    </tr>

                    <tr>

                        <td colspan="2">
                            <input type="submit" value="Đổi mật khẩu" class="btn-doimatkhau" />
                        </td>
                    </tr>


                </table>


                <div class="mess">
                    <a href="@Url.Action("Login", "NguyenThanhVinh")" class="link-nav">Đăng nhập</a> |
                    <a href="@Url.Action("Sign", "NguyenThanhVinh")" class="link-nav">Đăng ký tài khoản</a>
                </div>

            }
        </div>
    </div>
</body>


</html>
<script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
<script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

